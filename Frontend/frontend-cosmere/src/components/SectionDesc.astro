import "@styles/sectionContext.css";
const { key, value } = Astro.props;
---


{Array.isArray(key) ? key.slice(0, 10).map((k: string, index: number) => {
  const val = value[index];
  console.log("Value= ", val);
  
  if (val == null || val === "") return null;

  if (String(key) == "id_libro_original"){
    return (
    <div class="contentValor">
      <a class="value" href="#">
        { Array.isArray(val) ? (
          val.map((item, idx) => (
            <span>
              {item}
              {idx < val.length - 1 ? ", " : ""}
            </span>
          ))
        ) : (
          val
        )}
      </a>
    </div>
  );
  }else{

  return (
    <div class="contentValor">
      <p class="key">{k}:{" "}</p>
      <p class="value">
        { Array.isArray(val) ? (
          val.map((item, idx) => (
            <span>
              {item}
              {idx < val.length - 1 ? ", " : ""}
            </span>
          ))
        ) : (
          val
        )}
      </p>
    </div>
  );
  }
}) : null}
